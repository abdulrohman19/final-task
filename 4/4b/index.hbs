<!DOCTYPE html>
<html>
<head>
    <title>Provinsi & Kabupaten</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Provinsi & Kabupaten</h1>

        {% if 'logged_in' in session %}
            <a href="/add_provinsi" class="btn btn-primary">Add Provinsi</a>
            <a href="/logout" class="btn btn-danger">Logout</a>
        {% else %}
            <a href="/login" class="btn btn-primary">Login</a>
            <a href="/register" class="btn btn-secondary">Register</a>
        {% endif %}

        <h2>Daftar Provinsi</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Nama</th>
                    <th>Diresmikan</th>
                    <th>Pulau</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for provinsi in provinsi_list %}
                <tr>
                    <td>{{ provinsi.nama }}</td>
                    <td>{{ provinsi.diresmikan }}</td>
                    <td>{{ provinsi.pulau }}</td>
                    <td>
                        <a href="/provinsi/{{ provinsi.id }}" class="btn btn-info btn-sm">Detail</a>
                        <a href="/edit_provinsi/{{ provinsi.id }}" class="btn btn-warning btn-sm">Edit</a>
 <a href="/delete_provinsi/{{ provinsi.id }}" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>